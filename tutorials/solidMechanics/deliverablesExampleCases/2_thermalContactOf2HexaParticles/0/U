FoamFile
{
    version     2.0;
    format      ascii;
    class       volVectorField;
    location    "0";
    object      U;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 1 0 0 0 0 0];

internalField   uniform (0 0 0);

boundaryField
{
    
	topBrickUp
    {
      type            timeVaryingFixedDisplacement;
      outOfBounds     clamp;
      fileName        "$FOAM_CASE/constant/timeVsTopDisp";
	  
	  pressure        uniform 50e6;
      DT              k;
	  
      value           uniform (0 0 0);
    }
	

	topBrickDown
    {
        type                 solid4Contact;
        master               yes;
        contactActive        yes;
        rigidMaster          no;
        shadowPatch          bottomBrickUp;
        interpolationMethod  ggi;
        //interpolationMethod  patchToPatch;
        projectionAlgo       visible;
         projectionDir        contactSphere;
        //projectionDir        vector;
        correctionFrequency   10;
        generalNormalContactModel generalStandardPenalty;
        generalStandardPenaltyNormalModelDict
        {
            relaxationFactor               0.1;
            penaltyScale                   1;
            returnScale                    1.5;
            contactGapTol                  1e-7;
            limitPenetration               no;
            penetrationLimit               -0.03;
            limitPressure                  no;
            pressureLimit                  1e12;
            correctMissedVertices          yes;
            distanceMethod                 point;
            //distanceMethod                 face;
            oscillationCorrection          yes;
            smoothingSteps                 1;
            infoFrequency                  10;
        }
        //frictionContactModel   frictionless;
        generalFrictionContactModel generalStandardPenalty;
		generalStandardPenaltyFrictionModelDict
        {
            relaxationFactor               0.1;
            penaltyScale                   1;
            oscillationCorrection          yes;
            smoothingSteps                 1;
            infoFrequency                  10;

            generalFrictionLaw	coulomb;
            frictionLawDict
            {
                frictionCoeff     0.1;
            }
        }
		
		pressure        uniform 0.1e6;
        DT              k;
        value                uniform (0 0 0);
    }
	
	
	bottomBrickUp
    {
      type                 solid4Contact;
      shadowPatch          topBrickDown;
      master               no;
      contactActive        yes;
      value                uniform (0 0 0);
    }
    	

}


